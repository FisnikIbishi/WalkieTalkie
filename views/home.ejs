	<script>
		let user = {
			id: '<%= data.user._id %>',
			name: '<%= data.user.username %>',
			number: "+91 91231 40293",
			pic: '/images/<%= data.user.avatar %>'
		};

		let contactList = [];
		`
			<% data.contacts.forEach(function(contact) { %>
				${contactList.push(
			{
				id: '<%= contact.friend_id._id %>',
				name: '<%= contact.friend_id.username %>',
				number: "+91 91231 40293",
				pic: '/images/<%= contact.friend_id.avatar %>',
				lastSeen: ""
			}
		)}
			<% }) %> `;

		// message status - 0:sent, 1:delivered, 2:read
		let messages = [];
		
`
	<% data.messages.forEach(function(message) { %>
		${messages.push(
		{
			id: '<%= message._id %>',
			sender: '<%= message.sender._id %>',
			body: '<%= message.message %>',
			time: '<%=message.created_at%>',
			status: 2,
			recvId: '<%= message.recipient._id %>',
			recvIsGroup: false
		})}
		<% }) %>
`;


		function addUsersToUserList(users) {
			var userList = document.getElementById("userList");
			userList.innerHTML = ""; // Clear existing list

			for (var i = 0; i < users.length; i++) {
				var user = users[i];
				var listItem = document.createElement("li");
				listItem.className = "user";

				var userImage = document.createElement("img");
				userImage.src = '/images/' + user.avatar;
				listItem.appendChild(userImage);

				var userName = document.createElement("span");
				userName.textContent = user.name;
				listItem.appendChild(userName);

				userList.appendChild(listItem);
			}
		}

		var users = [];

		`
			<% data.users.forEach(function(user) { %>
				${users.push(
			{
				name: '<%= user.username %>',
				avatar: '<%= user.avatar %>'
			})}
			<% }) %> `;

		if (users.length > 0) {
			document.getElementById('userListIcon').style.display = 'inline-block'
		}
		addUsersToUserList(users);

	</script>

