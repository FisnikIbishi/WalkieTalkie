<!DOCTYPE html>
<html>

<head>
    <title>Basic Form</title>
</head>

<body>
    <h1>Basic Form</h1>

    <form method="post" action="/disease">
        <label for="name">Disease Name:</label>
        <input type="text" id="name" name="name" required>
        <br />
        <button type="submit">Add</button>
    </form>

    <br /><br />

    <form method="post" action="/subdisease">
        <label for="name">Disease Name:</label>
        <input type="text" id="name" name="name" required><br />
        <label for="dropdown">Select disease:</label>
        <select id="dropdown" name="subdiseaseid">
            <% diseases.forEach((disease)=> { %>
                <option value="<%= disease.id %>">
                    <%= disease.name %>
                </option>
                <% }); %>
        </select>
        <br />
        <button type="submit">Add</button>
    </form>
    <br /><br />
    <table>
        <thead>
            <tr>
                <th>Diseases</th>
            </tr>
        </thead>
        <tbody>
            <% diseases.forEach((disease)=> { %>
                <tr>
                    <td>
                        <%= disease.name %>
                    </td>
                    <td>
                       <a href="/disease/<%= disease._id %>">Edit</a>
                    </td>
                    <td>
                        <form method="post" action="/disease/delete/<%= disease.id %>">
                            <button type="submit">Delete</button>
                        </form>
                    </td>
                </tr>
                <% }); %>
        </tbody>
    </table>

    <br /><br />
    <table>
        <thead>
            <tr>
                <th>Sub Diseases</th>
            </tr>
        </thead>
        <tbody>
            <% subDiseases.forEach((subdisease)=> { %>
                <tr>
                    <td>
                        Subdisease name: <%= subdisease.name %>
                    </td>
                    <td>&nbsp;&nbsp;&nbsp;</td>
                    <td>
                        Disease name: <%= subdisease.diseaseId.name %>
                    </td>
                </tr>
                <% }); %>
        </tbody>
    </table>
</body>

</html>